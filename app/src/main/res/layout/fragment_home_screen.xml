<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/title_homescreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Осмотр оборудования ПС"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Группа ОРУ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Открытые распределительные устройства"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/inspect_oru_35"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/oru_35"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/inspect_oru220"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/oru_220"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/inspect_oru500"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/oru_500"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Группа АТГ и Реактор -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="АТГ и Реактор"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/inspect_ATG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:text="АТГ + Реактор Р-500"
            android:textAllCaps="false" />

        <!-- Группа зданий -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Здания и помещения"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/inspect_buildings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:text="Здания/помещения"
            android:textAllCaps="false" />

        <!-- Группа действий -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnExportExcel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:text="Сохранить в Excel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnClearData"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:text="Очистить все данные"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>