<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Первая строка: Заголовки колонок -->
        <TextView
            android:id="@+id/connection_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/feeder"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/v_220_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/v_220_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/v_220_header"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tt_220_header"
            app:layout_constraintStart_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tt_220_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tt_220_header"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_220_header"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Вторая строка: Мирная -->
        <TextView
            android:id="@+id/mirnaya_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mirnaya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/connection_header"
            app:layout_constraintBottom_toBottomOf="@+id/purging_mirnaya" />

        <Spinner
            android:id="@+id/purging_mirnaya"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/v_220_header"
            app:layout_constraintEnd_toEndOf="@+id/v_220_header"
            app:layout_constraintTop_toBottomOf="@+id/v_220_header" />

        <Spinner
            android:id="@+id/oil_mirnaya"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/tt_220_header"
            app:layout_constraintEnd_toEndOf="@+id/tt_220_header"
            app:layout_constraintTop_toBottomOf="@+id/tt_220_header" />

        <!-- Разделитель -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purging_mirnaya" />

        <!-- Третья строка: Топаз -->
        <TextView
            android:id="@+id/topaz_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/topaz"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:layout_constraintBottom_toBottomOf="@+id/purging_topaz" />

        <Spinner
            android:id="@+id/purging_topaz"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/v_220_header"
            app:layout_constraintEnd_toEndOf="@+id/v_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <Spinner
            android:id="@+id/oil_topaz"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/tt_220_header"
            app:layout_constraintEnd_toEndOf="@+id/tt_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <!-- Разделитель -->
        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purging_topaz" />

        <!-- Четвёртая строка: ОВ-220 -->
        <TextView
            android:id="@+id/o_v_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/o_v"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintBottom_toBottomOf="@+id/purging_o_v" />

        <Spinner
            android:id="@+id/purging_o_v"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/v_220_header"
            app:layout_constraintEnd_toEndOf="@+id/v_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <Spinner
            android:id="@+id/oil_ov"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/tt_220_header"
            app:layout_constraintEnd_toEndOf="@+id/tt_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <!-- Разделитель -->
        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purging_o_v" />

        <!-- Пятая строка: 2АТГ -->
        <TextView
            android:id="@+id/atg_2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/atg_2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintBottom_toBottomOf="@+id/purging_atg_2" />

        <Spinner
            android:id="@+id/purging_atg_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/v_220_header"
            app:layout_constraintEnd_toEndOf="@+id/v_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <Spinner
            android:id="@+id/oil_atg_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintStart_toStartOf="@+id/tt_220_header"
            app:layout_constraintEnd_toEndOf="@+id/tt_220_header"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>