<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Заголовки колонок -->
        <TextView
            android:id="@+id/connection_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/feeder"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/phase_a_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phase_a_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/f_A"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/phase_b_header"
            app:layout_constraintStart_toEndOf="@+id/connection_header"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phase_b_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/f_B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/phase_c_header"
            app:layout_constraintStart_toEndOf="@+id/phase_a_header"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phase_c_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/f_C"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phase_b_header"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Секция: Мирная - В-220 -->
        <TextView
            android:id="@+id/v_220_mirnaya_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/v_220_mirnaya_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/purging_mirnaya_a"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/phase_a_header" />

        <!-- Фаза A -->
        <Spinner
            android:id="@+id/purging_mirnaya_a"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_a_header"
            app:layout_constraintStart_toStartOf="@+id/phase_a_header"
            app:layout_constraintTop_toBottomOf="@+id/phase_a_header" />

        <!-- Фаза B -->
        <Spinner
            android:id="@+id/purging_mirnaya_b"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_b_header"
            app:layout_constraintStart_toStartOf="@+id/phase_b_header"
            app:layout_constraintTop_toBottomOf="@+id/phase_b_header" />

        <!-- Фаза C -->
        <Spinner
            android:id="@+id/purging_mirnaya_c"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_c_header"
            app:layout_constraintStart_toStartOf="@+id/phase_c_header"
            app:layout_constraintTop_toBottomOf="@+id/phase_c_header" />

        <!-- Секция: Мирная - ТТ-220 -->
        <TextView
            android:id="@+id/tt_220_mirnaya_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/tt_220_mirnaya_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/oil_mirnaya_a"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_mirnaya_a" />

        <!-- Фаза A -->
        <Spinner
            android:id="@+id/oil_mirnaya_a"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_a_header"
            app:layout_constraintStart_toStartOf="@+id/phase_a_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_mirnaya_a" />

        <!-- Фаза B -->
        <Spinner
            android:id="@+id/oil_mirnaya_b"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_b_header"
            app:layout_constraintStart_toStartOf="@+id/phase_b_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_mirnaya_b" />

        <!-- Фаза C -->
        <Spinner
            android:id="@+id/oil_mirnaya_c"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_c_header"
            app:layout_constraintStart_toStartOf="@+id/phase_c_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_mirnaya_c" />

        <!-- Разделитель -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oil_mirnaya_a" />

        <!-- Секция: Топаз - В-220 -->
        <TextView
            android:id="@+id/v_220_topaz_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/v_220_topaz_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/purging_topaz_a"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <!-- Фаза A -->
        <Spinner
            android:id="@+id/purging_topaz_a"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_a_header"
            app:layout_constraintStart_toStartOf="@+id/phase_a_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <!-- Фаза B -->
        <Spinner
            android:id="@+id/purging_topaz_b"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_b_header"
            app:layout_constraintStart_toStartOf="@+id/phase_b_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <!-- Фаза C -->
        <Spinner
            android:id="@+id/purging_topaz_c"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_c_header"
            app:layout_constraintStart_toStartOf="@+id/phase_c_header"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <!-- Секция: Топаз - ТТ-220 -->
        <TextView
            android:id="@+id/tt_220_topaz_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/tt_220_topaz_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/oil_topaz_a"
            app:layout_constraintEnd_toEndOf="@+id/connection_header"
            app:layout_constraintStart_toStartOf="@+id/connection_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_topaz_a" />

        <!-- Фаза A -->
        <Spinner
            android:id="@+id/oil_topaz_a"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_a_header"
            app:layout_constraintStart_toStartOf="@+id/phase_a_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_topaz_a" />

        <!-- Фаза B -->
        <Spinner
            android:id="@+id/oil_topaz_b"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_b_header"
            app:layout_constraintStart_toStartOf="@+id/phase_b_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_topaz_b" />

        <!-- Фаза C -->
        <Spinner
            android:id="@+id/oil_topaz_c"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:entries="@array/pressure_and_oil_readings"
            app:layout_constraintEnd_toEndOf="@+id/phase_c_header"
            app:layout_constraintStart_toStartOf="@+id/phase_c_header"
            app:layout_constraintTop_toBottomOf="@+id/purging_topaz_c" />

        <!-- Разделитель -->
        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oil_topaz_a" />

        <!-- Продолжить аналогично для остальных секций: -->
        <!-- ОВ-220 В-220, ОВ-220 ТТ-220 -->
        <!-- 2АТГ В-220, 2АТГ ТТ-220 -->
        <!-- ШСВ-220 В-220, ШСВ-220 ТТ-220 -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>