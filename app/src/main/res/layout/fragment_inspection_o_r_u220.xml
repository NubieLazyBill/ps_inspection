<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:shrinkColumns="*">

        <!-- Заголовок таблицы - фазы -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Заголовки фаз -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="А"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="В"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="С"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Секция: Мирная - Выключатель -->
        <!-- Заголовок В-220 Мирная -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:text="В-220 Мирная"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Спиннеры выключателя -->
        <TableRow>
            <Spinner
                android:id="@+id/purging_mirnaya_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_mirnaya_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_mirnaya_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />
        </TableRow>

        <!-- Разделитель после выключателя -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- Заголовок ТТ-220 Мирная -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:text="ТТ-220 Мирная"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Спиннеры трансформатора тока -->
        <TableRow>
            <Spinner
                android:id="@+id/oil_mirnaya_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_mirnaya_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_mirnaya_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />
        </TableRow>

        <!-- Толстый разделитель между секциями -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#999"
            android:layout_marginVertical="16dp" />

        <!-- Секция: Топаз - Выключатель -->
        <!-- Заголовок В-220 Топаз -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:text="В-220 Топаз"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Спиннеры выключателя -->
        <TableRow>
            <Spinner
                android:id="@+id/purging_topaz_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_topaz_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_topaz_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />
        </TableRow>

        <!-- Разделитель после выключателя -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- Заголовок ТТ-220 Топаз -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:text="ТТ-220 Топаз"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Спиннеры трансформатора тока -->
        <TableRow>
            <Spinner
                android:id="@+id/oil_topaz_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_topaz_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_topaz_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/pressure_and_oil_readings"
                android:minWidth="120dp"
                android:gravity="center" />
        </TableRow>

    </TableLayout>
</ScrollView>