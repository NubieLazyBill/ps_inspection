<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:shrinkColumns="*">

        <!-- Заголовок таблицы - фазы -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/f_A"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/f_B"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/f_C"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ЯЧЕЙКА 1: В-500 Р-500 2С (воздушный) -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/v_500_r_500_2s"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- I элемент - Уровень продувки -->
        <TableRow>

            <Spinner
                android:id="@+id/purging_r_500_2s_a1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_I"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_r_500_2s_b1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_I"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_r_500_2s_c1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_I"
                android:gravity="center" />
        </TableRow>

        <!-- II элемент - Уровень продувки -->
        <TableRow>

            <Spinner
                android:id="@+id/purging_r_500_2s_a2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_II"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_r_500_2s_b2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_II"
                android:gravity="center" />

            <Spinner
                android:id="@+id/purging_r_500_2s_c2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_readings_v_500_II"
                android:gravity="center" />
        </TableRow>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- ЯЧЕЙКА 2: В-500 ВШТ-31 (элегазовый) -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/v_500_vsht_31"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Давление элегаза -->
        <TableRow>
            <EditText
                android:id="@+id/gas_pressure_vsht_31_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gas_pressure_vsht_31_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gas_pressure_vsht_31_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />
        </TableRow>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- ТТ-500 ВШТ-31 -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/tt_500_vsht_31"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Уровень масла ТТ -->
        <TableRow>
            <Spinner
                android:id="@+id/oil_tt_vsht_31_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_tt_vsht_31_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_tt_vsht_31_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />
        </TableRow>

        <!-- Толстый разделитель между ячейками -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#999"
            android:layout_marginVertical="16dp" />

        <!-- ЯЧЕЙКА 3: В-500 ВЛТ-30 (элегазовый) -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/v_500_vlt_30"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Давление элегаза -->
        <TableRow>
            <EditText
                android:id="@+id/gas_pressure_vlt_30_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gas_pressure_vlt_30_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gas_pressure_vlt_30_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0,0"
                android:inputType="numberDecimal"
                android:textSize="14sp" />
        </TableRow>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- ТТ-500 ВЛТ-30 -->
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/tt_500_vlt_30"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Уровень масла ТТ -->
        <TableRow>
            <Spinner
                android:id="@+id/oil_tt_vlt_30_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_tt_vlt_30_b"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_tt_vlt_30_c"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />
        </TableRow>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:layout_marginVertical="8dp" />

        <!-- ТТ-500 Трачуковская -->
        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/tt_500_trachukovskaya"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Уровень масла ТТ -->
        <TableRow>
            <Spinner
                android:id="@+id/oil_tt_trachukovskaya_a"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:entries="@array/purging_and_oil_readings"
                android:gravity="center" />

            <Spinner
                android:id="@+id/oil_tt_trachukovskaya_b"
                android:layout_width="0dp"
